<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atualizar Informações"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/txt_att_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textAlignment="textStart"
        android:layout_below="@id/title"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/txt_att_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_att_id"
        android:hint="Digite o novo mome"
        android:layout_margin="8dp" />

    <EditText
        android:id="@+id/txt_att_cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_att_Name"
        android:hint="Digite o novo cpf"
        android:layout_margin="8dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/txt_att_idDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_att_cpf"
        android:hint="Digite novo id do Departamento"
        android:layout_margin="8dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/txt_att_idCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_att_idDepartment"
        android:hint="Digite o novo id do curso"
        android:layout_margin="8dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/txt_att_idProfessor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_att_idCurso"
        android:hint="Digite o novo id do Professor"
        android:layout_margin="8dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/txt_att_hourStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_att_idProfessor"
        android:hint="Digite a nova hora de inicio"
        android:layout_margin="8dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/txt_att_hourEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_att_hourStart"
        android:hint="Digite a nova hora de termino"
        android:layout_margin="8dp"
        android:visibility="gone"/>


</RelativeLayout>
